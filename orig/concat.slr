#!/bin/bash
#SBATCH -J concat
#SBATCH --account=rogersa-kp
#SBATCH --partition=rogersa-kp
#SBATCH --time=10:00:00
#SBATCH --nodes 1
#SBATCH --ntasks 1
#SBATCH -o concat.out # stdout
#SBATCH -e concat.err # stderr

fmt="AltaiNea.hg19_1000g.%s.mod.vcf.gz "
# concatenate autosomes
bcftools concat --file-list <(seq 22 | sort | xargs printf fmt ) \
  --threads 32 --output-type b --output AltaiNea.bcf

