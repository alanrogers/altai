#!/bin/bash
#SBATCH -J nfixed
#SBATCH --account=rogersa-kp
#SBATCH --partition=rogersa-kp
#SBATCH --time=10:00:00
#SBATCH --nodes 1
#SBATCH --ntasks 1
#SBATCH -o nfixed.txt # stdout
#SBATCH -e nfixed.err # stderr

ls AltaiNea.hg19*.mod-fixed.vcf.gz | xargs -n 1 bash countlines.sh |

ifile=AltaiNea.bcf
echo "lines in ${ifile}"
bcftools query -f'%CHROM\n' ${ifile} | wc -l |
